{{#if updateBlog}}
  <h4>Update {{blog.title}}</h4>
  <div class="container">
    <form>
      <div class="form-group">
        <label for="title">Title</label>
        {{input value=title id="title" placehoder=blog.title}}
      </div>
      <div class="form-group">
        <label for="author">Author</label>
        {{input value=author id="author" placehoder=blog.author}}
      </div>
      <div class="form-group">
        <label for="text">Blog Body</label>
        {{input value=text id="text" placehoder=blog.text}}
      </div>
      <div class="form-group">
        <label for="image">Image URL</label>
        {{input value=image id="image" placehoder=blog.image}}
      </div>
      <button {{action 'update' blog}}>Save Update</button>
    </form>
  </div>
{{else}}
  <button {{action 'updateBlog'}}>Update</button>
{{/if}}
