{{#if addBlog}}
  <h4>New Blog</h4>
  <div class="container">
    <form>
      <div class="form-group">
        <label for="title">Title</label>
        {{input value=title id="title"}}
      </div>
      <div class="form-group">
        <label for="author">Author</label>
        {{input value=author id="author"}}
      </div>
      <div class="form-group">
        <label for="text">Blog Body</label>
        {{input value=text id="text"}}
      </div>
      <div class="form-group">
        <label for="image">Image URL</label>
        {{input value=image id="image"}}
      </div>
      <button {{action 'saveBlog1'}}>Add</button>
    </form>
  </div>
{{else}}
  <button {{action 'blogFormShow'}}>Add New Blog</button>
{{/if}}
